{% extends "SLMNWovieMainBundle::html/layout_frame.html.twig" %}

{% block body %}
    <div class="row">
        <div class="large-12 columns">
            <h4>Which episode did you watch?</h4>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <ul class="no-bullet">
                {# TODO: Automatically scroll to the episode, he could watch next. #}
                {% if episodes != false %}
                    {% set curSeason = 1 %}
                    {% set curEpisodeInSeason = 1 %}
                {% endif %}
                {% for i in 1..media.numberOfEpisodes %}
                    {% set views = viewsOfId(media.id, i) %}
                    {% if episodes != false %}
                        {% if curEpisodeInSeason == 1 %}
                            <h6>Season {{ curSeason }}</h6>
                        {% endif %}
                    {% endif %}
                    <li>
                        <ul class="button-group">
                            <li>
                                <label class="button small" for="checkbox-{{ i }}">
                                    <input class="choose-episode-checkbox" id="checkbox-{{ i }}" type="checkbox">
                                </label>
                            </li>
                            <li>
                                <button class="button small watched_it" data-media-id="{{ media.id }}" data-episode-id="{{ i }}">
                                    {% if episodes != false %}
                                        {% set curEpisodeInSeason = curEpisodeInSeason+1 %}
                                        {{ curEpisodeInSeason-1 }}
                                        {% if episodes[curSeason] is defined and episodes[curSeason][curEpisodeInSeason-1] is defined %}
                                            {{ episodes[curSeason][curEpisodeInSeason-1] }}
                                            {% if media.numberOfEpisodes > i and episodes[curSeason][curEpisodeInSeason] is not defined %}
                                                {% set curEpisodeInSeason = 1 %}
                                                {% set curSeason = curSeason+1 %}
                                            {% endif %}
                                        {% endif %}
                                    {% else %}
                                        {{ i }}
                                    {% endif %}
                                </button>
                            </li>
                            {% if views > 0 %}
                            <li>
                                <button class="button small alert watched_it_not" data-media-id="{{ media.id }}" data-episode-id="{{ i }}">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </li>
                            <li>
                                <button class="button small disabled">
                                    <i class="fa fa-check-square"></i> {% if views > 1 %} {{ views }}{% endif %}
                                </button>
                            </li>
                            {% endif %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock body %}
