{% extends "SLMNWovieMainBundle::html/layout.html.twig" %}

{% block pagetitle %}WOVIE - activity{% endblock pagetitle %}

{% block body %}
    {% if activities|length > 0 %}
        <div id="activity-infinite-container">
            {% for activity in activities %}
                {{ wovie.activityBox(activity) }}
            {% endfor %}
            <a class="hide infinite-more-link" href="{{ path('slmn_wovie_actions_ajax_infinite_activity', {'page': 2}) }}"></a>
        </div>
        <div class="row hide" id="activity-infinite-spinner">
            <div class="small-12 text-center columns">
                <fa class="fa fa-spinner fa-spin fa-2x activity-spinner"></fa>
            </div>
        </div>
    {% else %}
        <div class="row" style="margin-top: 10px;">
            <div class="small-12 columns">
                {{ main.alertBox('No activities here, try to add some friends.', '', 0) }} {# TODO: Friendssearch #}
            </div>
        </div>
    {% endif %}
{% endblock body %}
