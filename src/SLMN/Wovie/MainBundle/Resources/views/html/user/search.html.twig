{% extends "SLMNWovieMainBundle::html/layout.html.twig" %}

{% block pagetitle %}WOVIE - search result for "{{ query }}"{% endblock pagetitle %}

{% block body %}
    <div class="row">
        <div class="large-12 columns">
            <h4>Results for "{{ query }}" in your library</h4>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            {% if result|length <= 0 %}
                <div data-alert="" class="alert-box warning radius">
                    No results found
                </div>
            {% else %}
                {% for item in result %}
                    {{ wovie.itemForList(item) }}
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <h4 id="search-result">Results for "{{ query }}" to add <small>data from the <a target="_blank" href="https://www.freebase.com/">freebase API</a></small></h4>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns" id="ajax-externalSearchContainer">
            <i class="fa fa-spinner fa-spin fa-lg"></i><span style="margin-left: 5px;">Loadingâ€¦</span>
        </div>
    </div>
    {% if getUserOption('didJoyrideSearch', false) == false %}
        {% include "SLMNWovieMainBundle:html/joyride:search.html.twig" %}
        {% set done = setUserOption('didJoyrideSearch', true) %}
    {% endif %}
{% endblock body %}
