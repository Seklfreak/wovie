{% extends "SLMNWovieMainBundle::html/layout.html.twig" %}

{% block pagetitle %}WOVIE - admin - edit user{% endblock pagetitle %}

{% block body %}
    {% include 'SLMNWovieMainBundle:html/user/admin:modals.html.twig' %}
    <div class="row">
        <div class="large-2 columns">
            {% include 'SLMNWovieMainBundle:html/user/admin:menu.html.twig' %}
        </div>
        <div class="large-10 columns">
            <div class="row">
                <div class="small-12 columns">
                <h4>User <small>#{{ editUserForm.vars.value.id }}</small></h4>
                </div>
            </div>
            {{ form_start(editUserForm) }}
            <input type="text" name="_prevent_autofill" value="" style="display:none;">
            <input type="password" name="_prevent_autofill" value="" style="display:none;">
            <div class="row">
                <div class="small-12 columns">
                    {{ form_errors(editUserForm) }}
                </div>
            </div>
            <div class="row">
                <div class="small-12 columns">
                    {{ form_row(editUserForm.username) }}
                </div>
                <div class="small-12 columns">
                    {{ form_row(editUserForm.email) }}
                </div>
                <div class="small-12 columns">
                    {{ form_row(editUserForm.password) }}
                </div>
                <div class="small-12 columns">
                    {{ form_row(editUserForm.roles) }}
                </div>
                <div class="small-12 columns">
                    <div class="row collapse">
                        <div class="small-4 large-2 columns">
                            <label for="editUserAdmin_isActive">is active</label>
                            <div class="switch">
                                {{ form_widget(editUserForm.isActive) }}
                                <label for="editUserAdmin_isActive"></label>
                            </div>
                        </div>
                        <div class="small-4 large-2 end columns">
                            <label for="editUserAdmin_isNonLocked">is non locked</label>
                            <div class="switch">
                                {{ form_widget(editUserForm.isNonLocked) }}
                                <label for="editUserAdmin_isNonLocked"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="small-12 columns">
                    <div class="row collapse">
                        <div class="small-3 large-1 large-offset-9 columns">
                        <a
                        data-user-id="{{ editUserForm.vars.value.id }}"
                        class="action-user-delete button alert expand"
                        ><i class="fa fa-trash-o"></i></a>
                        </div>
                        <div class="small-9 large-2 columns">
                            {{ form_row(
                            editUserForm.submit,
                            {'label': 'Save'}
                            ) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="small-12 columns">
                    {{ form_end(editUserForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
