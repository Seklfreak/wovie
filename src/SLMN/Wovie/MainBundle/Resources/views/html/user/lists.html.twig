{% extends "SLMNWovieMainBundle::html/layout.html.twig" %}

{% block pagetitle %}WOVIE - lists{% endblock pagetitle %}

{% block body %}
    {% set myLists = getMyLists() %}
    <div class="row">
        <div class="large-12 columns">
            <div class="row collapse">
                <div class="large-12 small-12 columns">
                    <h4>
                        Your lists
                        <small>
                            <b>{{ myLists|length }}</b> total
                        </small>
                    </h4>
                </div>
                {# TODO: Input and button to create list? #}
            </div>
        </div>
    </div>
    {% for list in myLists %}
        {{ wovie.list(list) }}
    {% endfor %}
{% endblock body %}
