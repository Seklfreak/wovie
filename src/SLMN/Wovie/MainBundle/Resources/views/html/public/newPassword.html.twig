{% extends "SLMNWovieMainBundle::html/layout.html.twig" %}

{% block pagetitle %}WOVIE - Password forgotten?{% endblock pagetitle %}

{% block body %}
    <div class="row">
        <div class="large-12 columns">
            <h1>Password forgotten?</h1>
            <h4>Try the following form.</h4>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            {{ form_start(newPendingPasswordChange) }}
            {{ form_errors(newPendingPasswordChange) }}
            {{ form_row(newPendingPasswordChange.email) }}
            {{ form_row(newPendingPasswordChange.Submit) }}
            {{ form_end(newPendingPasswordChange) }}
        </div>
    </div>
{% endblock body %}
