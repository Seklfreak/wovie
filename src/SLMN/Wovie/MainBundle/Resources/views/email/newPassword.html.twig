{% extends 'SLMNWovieMainBundle::email/layout.html.twig' %}

{% block content %}
    {{ email.tableRow('
    <td>
        <h4>Hello!</h4>
        <p>You requested an password change. Click the following link, to change your password.</p>
    </td>
    ') }}
    {{ email.tableRow('
    <td class="panel">
        <b><a href="' ~ newPasswordUrl|default('#newPasswordUrl') ~ '">' ~ newPasswordUrl|default('#newPasswordUrl') ~ '</a> (Link valid for 24 hours)</b>
    </td>
    ') }}
    {{ email.tableRow('
    <td>
        <p>If you did not requested an password change, ignore this email please.</p>
    </td>
    ') }}
{% endblock content %}